@{
    ViewData["Title"] = "Home Page";
}
@using System.Collections.Generic
@model WebApplication1.RuleItem
<form asp-controller="Home" asp-action="Demo" method="post" class="form-horizontal" role="form">
    <div class="text-center">
        Business Rules
    </div>
    <div class="container">
        <div class="form-group">
            <div class="row">  Choose payment type</div>
        </div>
    </div>
    <div class="container">
        <div class="form-group">

            <div class="row">
                <select asp-for="Id" asp-items="@(new SelectList(@ViewBag.ListofCountry,"Id", "PaymentType"))"></select>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="form-group">

            <div class="row">
                <input id="Submit1" type="submit" value="submit" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4">
                @if (ViewBag.SelectedValue != null)
                {
                    <text>Rule found: </text> @ViewBag.SelectedValue;
                }
            </div>
        </div>
    </div>
</form>